{
  "name": "Codespace - OpenAI Codex CLI",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "installBicep": true,
      "version": "latest",
      "bicepVersion": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "ms-azuretools.vscode-bicep",
        "ms-azuretools.vscode-azureresourcegroups",
        "GitHub.copilot"
      ]
    }
  },
  "postCreateCommand": "bash -lc 'sudo -E npm install -g @openai/codex'",
  "postStartCommand": "bash -lc 'if [ -z \"$OPENAI_API_KEY\" ]; then echo \"[codex] Tip: add an OPENAI_API_KEY Codespaces secret.\"; fi; codex --version || true'"
}