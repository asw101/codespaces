{
  "name": "Just Development Container (Base)",
  "image": "ghcr.io/asw101/codespaces/just:latest",
  // "build": {
  //   "dockerfile": "Dockerfile",
  //   "args": {
  //     "INSTALL_ALL": "false"
  //   }
  // },
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "rust-lang.rust-analyzer",
        "ms-azuretools.vscode-bicep",
        "ms-azuretools.vscode-azureresourcegroups",
        "GitHub.copilot"
      ]
